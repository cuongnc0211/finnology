<h2>Article detail</h2>

<p>Base infor</p>

<table class="table table-striped table-hover">
  <tbody>
    <tr>
      <td>Title</td>
      <td><%= @article.title %></td>
    </tr>

    <tr>
      <td>Slug</td>
      <td><%= @article.slug %></td>
    </tr>

    <tr>
      <td>Subtitle</td>
      <td><%= @article.subtitle %></td>
    </tr>

    <tr>
      <td>Status</td>
      <td><%= @article.status %></td>
    </tr>

    <tr>
      <td>Spotlight</td>
      <td><%= @article.spotlight_until %></td>
    </tr>
  </tbody>
</table>

<p>Content</p>

<div class="py-3 px-3 mb-3" style="border: 1px solid lightgrey">
  <%= raw @article.content %>
</div>

<div>
  <%= link_to "Edit this article", edit_admin_article_path(@article) %> |
  <%= link_to "Back to articles", admin_articles_path %>

  <%= button_to "Destroy this article", [:admin, @article], method: :delete %>
</div>
