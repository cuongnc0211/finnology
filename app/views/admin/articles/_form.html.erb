<div class="flex flex-col">
  <%= form_for([:admin, article]) do |f| %>
    <% if article.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

        <ul>
          <% article.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="md:flex mb-6">
      <div class="md:w-1/5">
          <label class="block text-gray-600 font-bold md:text-left mb-3 md:mb-0 pr-4" for="my-textfield">
            Cover Photo
          </label>
      </div>
      <div class="md:w-4/5">
          <%= f.file_field :cover, class: "form-input block w-full focus:bg-white" %>
          <p class="py-2 text-sm text-gray-600">add notes about populating the field</p>
      </div>
    </div>

    <div class="md:flex mb-6">
      <div class="md:w-1/5">
        <label class="block text-gray-600 font-bold md:text-left mb-3 md:mb-0 pr-4" for="my-textfield">
          Title
        </label>
      </div>
      <div class="md:w-4/5">
        <%= f.text_field :title, class: "form-input block w-full focus:bg-white" %>
      </div>
    </div>

    <div class="md:flex mb-6">
      <div class="md:w-1/5">
        <label class="block text-gray-600 font-bold md:text-left mb-3 md:mb-0 pr-4" for="my-textfield">
          Slug
        </label>
      </div>
      <div class="md:w-4/5">
        <%= f.text_field :slug, class: "form-input block w-full focus:bg-white" %>
      </div>
    </div>

    <div class="my-3">
      <%= f.label :content, class: "" %>
      <%= f.rich_text_area :content, class: "trix_text_area" %>
    </div>

    <div class="md:flex mb-6">
      <div class="md:w-1/5">
        <label class="block text-gray-600 font-bold md:text-left mb-3 md:mb-0 pr-4" for="my-textfield">
          Subtitle
        </label>
      </div>
      <div class="md:w-4/5">
        <%= f.text_field :subtitle, class: "form-input block w-full focus:bg-white" %>
      </div>
    </div>

    <div class="md:flex mb-6">
      <div class="md:w-1/5">
        <label class="block text-gray-600 font-bold md:text-left mb-3 md:mb-0 pr-4" for="my-textfield">
          Tag List
        </label>
      </div>
      <div class="md:w-4/5">
        <%= f.text_field :tag_list, value: f.object.tag_list_value, class: "form-input block w-full focus:bg-white" %>
      </div>
    </div>

    <div class="md:flex mb-6">
      <div class="md:w-1/5">
        <label class="block text-gray-600 font-bold md:text-left mb-3 md:mb-0 pr-4" for="my-textfield">
          Status
        </label>
      </div>
      <div class="md:w-4/5">
        <%= f.select :status, Article::STATUSES, {}, { class: "form-input block w-full focus:bg-white" } %>
      </div>
    </div>

    <div class="md:flex mb-6">
      <div class="md:w-1/5">
        <label class="block text-gray-600 font-bold md:text-left mb-3 md:mb-0 pr-4" for="my-textfield">
          Spotlight Until
        </label>
      </div>
      <div class="md:w-4/5">
        <%= f.date_field :spotlight_until, class: "form-input block w-full focus:bg-white" %>
      </div>
    </div>

    <div>
      <%= f.submit 'submit', class: 'btn btn-primary form-control'%>
    </div>
  <% end %>
</div>
