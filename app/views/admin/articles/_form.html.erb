<%= form_for([:admin, article]) do |f| %>
  <% if article.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
        <% article.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group my-3">
    <%= f.label :cover %>
    <%= f.file_field :cover, class: "form-control" %>
  </div>

  <div class="form-group my-3">
    <%= f.label :tag_list %>
    <%= f.text_field :tag_list, value: f.object.tag_list_value, class: "form-control" %>
  </div>

  <div class="form-group my-3">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group my-3">
    <%= f.label :slug %>
    <%= f.text_field :slug, class: "form-control" %>
  </div>

  <div class="form-group my-3">
    <%= f.label :subtitle %>
    <%= f.text_area :subtitle, class: "form-control" %>
  </div>

  <div class="form-group my-3">
    <%= f.label :status %>
    <%= f.select :status, Article::STATUSES, {}, { class: "form-control" } %>
  </div>

  <div class="form-group my-3">
    <%= f.label :spotlight_until %>
    <%= f.date_field :spotlight_until, class: "form-control" %>
  </div>

  <div class="form-group my-3">
    <%= f.label :content %>
    <%= f.rich_text_area :content, class: "form-control trix_text_area" %>
  </div>

  <div>
    <%= f.submit 'submit', class: 'btn btn-primary form-control'%>
  </div>
<% end %>
