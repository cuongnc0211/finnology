<div class="col-12 col-md-6 mb-4">
  <div class="card" style="">
    <div class="cover-container">
      <img src="<%= article_cover_url(article) %>" class="card-img-top img-fluid rounded" alt="...">
    </div>

    <div class="card-body">
      <h5 class="card-title"><%= article.title %></h5>
      <p class="card-text"><%= article.subtitle %></p>

      <p class="lead mb-0">
        <a href="<%= public_article_link(article) %>" class="text-dark font-weight-bold">Continue reading...</a>
      </p>
    </div>
  </div>
</div>
